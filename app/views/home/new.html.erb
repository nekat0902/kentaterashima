<div class="bg-1 text-center">
  <div class="container">
    <div class="intro-text">
      <h2>Welcome to my world</h2>
      <h1>Kenta Terashima</h1>
    <%= link_to "Contact", {anchor:"button"}, class:"btn btn-secondary margin-top-30"%>
    </div>
  </div>
  <div class="page-section" id="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1 class="text-uppercase margin-bottom-60">About</h1>
        </div>
      </div>
      <div class="row">
        <div class="about_img">
          <img class="profile-img" src="/profile1.JPG" alt="profile">
        </div>
        <div class="about_profile">
          <div class="profile_text">
            <h3 class=profile-h3>Profile</h3>
            <div class="profile-left">
              <p class=profile-left1>1998年愛知県にて誕生</p>
              <p class=profile-left1>名古屋外国語大学</p>
              <p class=profile-left1>さようなら</p>
              <p class=profile-left1>ありがとう</p>
              <p class=profile-left1>あははは</p>
            </div>
          </div>
          <div class="profile_hobby">
            <h3 class="profile-h3">趣味</h3>
            <div class="profile-left">
              <p class="profile-left1">サウナ</p>
              <p class="profile-left1">筋トレ</p>
              <p class="profile-left1">映画鑑賞</p>
              <p class="profile-left1">ギター</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="page-section bg2" id="picture">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1 class="text-uppercase margin-bottom-60">Pictures</h1>
        </div>
      </div>
      <div class="row">
        <div class="me-pictures">
          <div class="me-img">
            <img src="/me1.jpg" class="picture-img" alt="">
            <p class="box-shadow1">私</p>
          </div>
          <div class="me-img">
            <img src="/me3.jpg" class="picture-img" alt="">
            <p>私</p>
          </div>
          <div class="me-img">
            <img src="/me33.jpg" class="picture-img" alt="">
            <p class="">私</p>
          </div>
          <div class="me-img">
            <img src="/me5.jpg" class="picture-img" alt="">
            <p class="">私</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="page-section bg3" id="button">
    <div class="row">
      <div class="col-lg-12 text-center color-white">
        <h1 class="text-uppercase margin-bottom-60 ">Contact</h1>
      </div>
    </div>
    <div class="row ">
      <div class="container">

      </div>
      <div class="inquire z-index100 container">
        <%= form_for contacts_new_path do |f| %>

          <div class="form-group color-white　">
            <%= f.label :email, '返信先メールアドレス', class:'color-white' %>
            <%= f.text_field :email, class: 'form-control' ,placeholder: 'example@example.com'%>
          </div>

         <div class="form-group">
           <%= f.label :message, 'お問い合わせ内容', class: 'color-white'%>
           <%= f.text_area :message,  class: 'form-control' ,placeholder: 'あは'%>
         </div>

          <%= f.submit '送信' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
